<div class="row">

    <!-- Blog Entries Column -->
    <div class="col-md-8">

        <h1 class="my-4">Page Heading
            <small>Secondary Text</small>
        </h1>

        <!-- Blog Post -->
        {{#each posts}}
        <div class="card mb-4">
            <img height="300px" class="card-img-top" src="{{file}}" alt="Card image cap">
            <div class="card-body">
                <h2 class="card-title">{{title}}</h2>
                <p class="card-text">{{description}}</p>
                <h3 class="card-text">Category: {{category.title}}
                </h3>
                <a href="/post/{{slug}}" class="btn btn-primary">Read More &rarr;</a>
            </div>
            <div class="card-footer text-muted">
                Posted on {{ creationDate}} by <a href="/author/{{author.username}}">{{author.firstName}} {{author.lastName}}</a> 
            </div>
        </div>
        {{/each}}

        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">
            <li class="page-item">
                <a class="page-link" href="#">&larr; Older</a>
            </li>
            <li class="page-item disabled">
                <a class="page-link" href="#">Newer &rarr;</a>
            </li>
        </ul>

    </div>

    <!-- Sidebar Widgets Column -->
    <div class="col-md-4">

        <!-- Search Widget -->
        <div class="card my-4">
            <h5 class="card-header">Search</h5>
            <div class="card-body">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>

        <!-- Categories Widget -->
        <div class="card my-4">
            <h5 class="card-header">Categories</h5>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled mb-0">
                            {{#each categories}}
                            <li>
                                <a href="#">{{title}}</a>
                            </li>
                            {{/each}}

                        </ul>
                    </div>

                </div>
            </div>
        </div>
    
    <div class="card my-4">
        <h5 class="card-header">Authors</h5>
        <div class="card-body">
            {{#each authors}}
            <a href="/author/{{username}}">{{firstName}} {{lastName}}</a>
    
            {{/each}}
        </div>
    </div>

        <div class="card my-4">
            <h5 class="card-header">Featured Posts</h5>
            <div class="card-body">
                {{#each featuredPosts}}
                <p>{{title}}: <span>Comments: {{comments.length}}</span></p>
        
                {{/each}}
            </div>
        </div>

        <div class="card my-4">
            <h5 class="card-header">Music & Audio</h5>
            <div class="card-body">
                {{#each audioPosts}}
                <p>{{title}}: <span>Comments: {{comments.length}}</span></p>
        
                {{/each}}
            </div>
        </div>

            <div class="card my-4">
                <h5 class="card-header">Top Posts</h5>
                <div class="card-body">
                    {{#each topPosts}}
                    <p>{{title}}: <span>Comments: {{comments.length}}</span></p>
            
                    {{/each}}
                </div>
            </div>

        <!-- Side Widget -->
        <div class="card my-4">
            <h5 class="card-header">Recent Comments</h5>
            <div class="card-body">
                {{#each comments}}
                <p>{{full_name}}: <span>{{body}}</span></p>

                {{/each}}
            </div>
        </div>

    </div>

</div>
<!-- /.row -->